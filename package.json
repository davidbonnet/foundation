{
  "name": "foundation",
  "version": "1.0.0",
  "description": "Core",
  "main": "lib/index.js",
  "module": "src/index.js",
  "scripts": {
    "start": "node scripts/server.js",
    "build": "parcel build --public-url ./ src/index.html",
    "build:watch": "parcel src/index.html --port ${npm_config_port:-1234}",
    "prepare": "babel --out-dir lib --ignore tests src",
    "test": "eslint src/ && prettier \"{src,scripts}/**/*.js\" --list-different && nyc ava",
    "test:watch": "ava --watch",
    "eslint": "eslint src/",
    "prettier": "prettier --write \"{src,scripts}/**/*.js\"",
    "prepush": "npm test"
  },
  "keywords": [
    "boilerplate",
    "app",
    "library"
  ],
  "author": "David Bonnet <david@bonnet.cc>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/davidbonnet/foundation.git"
  },
  "dependencies": {
    "jss": "^9.8.0",
    "jss-preset-default": "^4.3.0",
    "lodash": "^4.17.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "recompose": "^0.26.0"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-es3-member-expression-literals": "^6.22.0",
    "babel-plugin-transform-es3-property-literals": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chalk": "^2.3.0",
    "codecov": "^3.0.0",
    "connect": "^3.6.6",
    "eslint": "^4.14.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "esm": "^3.0.20",
    "husky": "^0.14.3",
    "nyc": "^11.5.0",
    "parcel-bundler": "^1.6.2",
    "prettier": "^1.9.2",
    "react-test-renderer": "^16.2.0",
    "serve-static": "^1.13.2"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true
  },
  "eslintConfig": {
    "plugins": [
      "import"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "prettier"
    ],
    "env": {
      "es6": true
    },
    "globals": {
      "console": true,
      "global": true,
      "module": true,
      "process": true,
      "require": true,
      "window": true,
      "__dirname": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      },
      "sourceType": "module"
    }
  },
  "ava": {
    "files": [
      "src/**/tests/*.js"
    ],
    "require": [
      "esm"
    ],
    "babel": {
      "presets": [
        [
          "env",
          {
            "modules": false
          }
        ]
      ]
    }
  },
  "nyc": {
    "exclude": [
      "src/**/tests/*.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "esm": "auto",
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  }
}
