{
  "name": "foundation",
  "version": "1.0.0",
  "description": "Core",
  "main": "lib/index.js",
  "scripts": {
    "start": "parcel src/index.html",
    "build": "parcel build --public-url ./ src/index.html",
    "build:lib": "babel --out-dir lib --presets env --ignore tests src",
    "server": "node scripts/server.js",
    "test": "ava",
    "coverage": "nyc ava",
    "coverage:html": "nyc ava && nyc report --reporter=html"
  },
  "keywords": ["boilerplate", "app", "library"],
  "author": "David Bonnet <david@bonnet.cc>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/davidbonnet/foundation.git"
  },
  "dependencies": {
    "jss": "^9.4.0",
    "jss-preset-default": "^4.0.1",
    "lodash": "^4.17.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "recompose": "^0.26.0"
  },
  "devDependencies": {
    "@std/esm": "^0.18.0",
    "ava": "^0.24.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-es3-member-expression-literals": "^6.22.0",
    "babel-plugin-transform-es3-property-literals": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chalk": "^2.3.0",
    "connect": "^3.6.5",
    "eslint": "^4.14.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "parcel-bundler": "^1.3.1",
    "prettier": "^1.9.2",
    "react-test-renderer": "^16.2.0",
    "serve-static": "^1.13.1"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true
  },
  "eslintConfig": {
    "plugins": ["import"],
    "extends": ["eslint:recommended", "plugin:import/errors", "prettier"],
    "env": {
      "es6": true
    },
    "globals": {
      "console": true,
      "global": true,
      "module": true,
      "process": true,
      "require": true,
      "window": true,
      "__dirname": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    }
  },
  "ava": {
    "files": ["src/**/tests/*.js"],
    "require": ["@std/esm"]
  },
  "nyc": {
    "exclude": ["src/**/tests/*.js"]
  },
  "@std/esm": {
    "esm": "js",
    "cjs": true
  },
  "babel": {
    "presets": ["env"]
  }
}
